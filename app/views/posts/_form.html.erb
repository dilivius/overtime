<%= form_for @post do |f| %>

  <% if @post.errors.any? %>
     <% @post.errors.full_messages.each do |msg| %>
      <%= js add_gritter(msg, title: "Errors",
              sticky: false, image: :notice, time: 2000) %>
     <% end %>
 <% end %>

<div class="form-group">
  <%= f.label :date %>
  <%= f.date_field :date, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :overtime_request %>
  <%= f.number_field :overtime_request, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :rationale %>
  <%= f.text_area :rationale, class: 'form-control' %>
</div>

<%= render partial: 'status', locals: { f: f } if current_user.type == 'AdminUser' %>
<%= f.submit 'Save', class: "btn btn-default" %>
<% end %>
