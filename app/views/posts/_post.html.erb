<tr>
  <td class="hidden-phone hidden-tablet">
    <%= post.id %>
  </td>
  <td>
    <%= link_to post.overtime_request, post %>
  </td>
  <td>
    <%= post.date %>
  </td>
  <td class="hidden-phone hidden-tablet">
      <%= truncate post.rationale %>
  </td>
  <td class="hidden-phone hidden-tablet">
    <%= post.user.full_name %>
  </td>
  <td>
    <%= status_label(post.status) %>
  </td>
  <td>
    <%= link_to '', edit_post_path(post), id: "edit_#{post.id}", class: 'glyphicon glyphicon-pencil index-icons' if policy(post).update? %>
    <%= link_to '', post_path(post), method: :delete,
            id: "delete_#{post.id}", class: 'glyphicon glyphicon-trash index-icons', data: {confirm: "Are you sure?" } %>
  </td>
</tr>
