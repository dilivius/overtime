<% if flash[:alert] %>
  <%= js add_gritter(flash[:alert], title: 'DailyHours app notification',
            sticky: false, image: :notice, time: 2000) %>
<% elsif flash[:error] %>
  <%= js add_gritter(flash[:error], title: 'DailyHours app notification',
          sticky: false, image: :notice, time: 2000) %>
<% else %>
  <%= js add_gritter(flash[:notice], title: 'DailyHours app notification',
            sticky: false, image: :notice, time: 2000) %>
<% end %>
